#!/usr/bin/env zsh

source 'lib/common.sh'
source 'lib/build.sh'
source 'lib/boot.sh'
source 'lib/verify.sh'
source 'lib/download.sh'
source 'lib/spec.sh'

if (( $# != 2 ))
then
  err 'Invalid arguments'
  cat <<EOF
Usage: $0 DEVICE VERSION
  Supported devices:
    iPod4,1
EOF
  exit
fi

device=$1
source "lib/devices/${device}.sh"

version=$2

download_redsn0w
download_ipsw $version
spec $version

download_ipsw '5.1.1'
build_ramdisk '5.1.1'
boot

verify $version


